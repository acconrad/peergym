<%= form_for @conn, gym_path(@conn, :index), [class: "form-inline form-gym-search", as: :search, method: "get"], fn f -> %>
  <%= hidden_input f, :lng %>
  <%= hidden_input f, :lat %>
  <%= hidden_input f, :place %>
  <div class="form-group">
    <%= text_input f, :location, class: "form-control form-gym-location input-lg", placeholder: "Enter a location" %>
  </div>
  <%= submit "Find Me a Gym Â»", class: "btn btn-lg btn-primary" %>
<% end %>
